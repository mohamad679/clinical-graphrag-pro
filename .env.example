# ══════════════════════════════════════════════════════════
# Clinical GraphRAG Pro — Environment Configuration
# Copy to .env and fill in your values
# ══════════════════════════════════════════════════════════

# ── App ──────────────────────────────────────────────────
APP_NAME="Clinical GraphRAG Pro"
DEBUG=false

# ── LLM Providers (set at least one) ────────────────────
GROQ_API_KEY=
GROQ_MODEL=llama-3.3-70b-versatile

GOOGLE_API_KEY=
GEMINI_MODEL=gemini-2.0-flash

# ── Database ─────────────────────────────────────────────
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/clinical_graphrag
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=clinical_graphrag

# ── Redis ────────────────────────────────────────────────
REDIS_URL=redis://redis:6379/0

# ── Auth ─────────────────────────────────────────────────
JWT_SECRET=change-this-to-a-secure-random-string
JWT_EXPIRE_MINUTES=480

# ── Rate Limiting ────────────────────────────────────────
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# ── RAG ──────────────────────────────────────────────────
CHUNK_SIZE=512
CHUNK_OVERLAP=64
TOP_K=5
USE_HYBRID_SEARCH=true
USE_RERANKING=true

# ── Fine-Tuning ─────────────────────────────────────────
FINE_TUNE_BASE_MODEL=unsloth/Meta-Llama-3.1-8B-bnb-4bit
LORA_RANK=16
